{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    {
      "source": "/api/igdb/:action",
      "destination": "/api/igdb.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!assets|platforms_out|favicon|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}
